<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.randy.arknoid.Model
        android:id="@+id/model"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">






        <ProgressBar
            android:id="@+id/acticity_progressbar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/black_background"
            android:max="700"
            android:progress="0"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:progressDrawable="@drawable/activity_progress_selector" />

        <Button
            android:id="@+id/acticity_btn2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/activity_btn_selector"
            />
        <TextView
            android:id="@+id/activity_hp2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="3"
            android:textSize="18dp"
            android:gravity="center" />






        <ProgressBar
            android:id="@+id/acticity_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/black_background"
            android:max="700"
            android:progress="0"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:progressDrawable="@drawable/activity_progress_selector" />
        <Button
            android:id="@+id/acticity_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/activity_btn_selector"
            />
        <TextView
            android:id="@+id/activity_hp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="3"
            android:textSize="19dp"
            android:textStyle="bold"
            android:gravity="center" />
    </RelativeLayout>

</FrameLayout>