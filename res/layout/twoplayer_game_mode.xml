<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></RelativeLayout>

        <ProgressBar
            android:id="@+id/acticity_progressbar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/black_background"
            android:max="700"
            android:progress="0"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:progressDrawable="@drawable/activity_progress_selector" />

        <Button
            android:id="@+id/acticity_btn2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/activity_btn_selector"
            />





        <ProgressBar
            android:id="@+id/acticity_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/black_background"
            android:max="700"
            android:progress="0"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:progressDrawable="@drawable/activity_progress_selector" />
        <Button
            android:id="@+id/acticity_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/activity_btn_selector"
            />
    </RelativeLayout>
</LinearLayout>