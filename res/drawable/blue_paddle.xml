<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#135ee1" />
            <gradient android:angle="-90" android:startColor="#48daea" android:endColor="#348785"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1baaf7" />
            <solid android:color="#15488f"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                />
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#01ffe1" />
            <gradient android:angle="-90" android:startColor="#00fbff" android:endColor="#19818b" />
        </shape>
    </item>
</selector>