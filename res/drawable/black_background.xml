<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="2dip" android:color="#ffffff" />
            <gradient android:angle="-90" android:startColor="#08d4ef" android:endColor="#26798f"  />
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                />
            <corners android:radius="3dip" />
            <stroke android:width="2dip" android:color="#ffffff" />
            <gradient android:angle="-90" android:startColor="#0ea6e9" android:endColor="#1a1c23" />
        </shape>
    </item>
</selector>