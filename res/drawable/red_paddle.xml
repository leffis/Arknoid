<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d24444" />
            <gradient android:angle="-90" android:startColor="#e42918" android:endColor="#bf5a35"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ba100d" />
            <solid android:color="#ac0a05"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                />
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff0900" />
            <gradient android:angle="-90" android:startColor="#ff0000" android:endColor="#f46d06" />
        </shape>
    </item>
</selector>