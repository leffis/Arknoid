<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ead03c" />
            <gradient android:angle="-90" android:startColor="#e2c43e" android:endColor="#ae8b2a"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#edd51a" />
            <solid android:color="#9c8b1c"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                />
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fcce05" />
            <gradient android:angle="-90" android:startColor="#ffe100" android:endColor="#ae780c" />
        </shape>
    </item>
</selector>